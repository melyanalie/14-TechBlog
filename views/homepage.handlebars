<h1>Homepage</h1>

{{#if loggedIn}}
  <a href="/dashboard">Dashboard</a> | <a href="/logout">Logout</a>
{{else}}
  <a href="/login">Login</a> | <a href="/signup">Sign Up</a>
{{/if}}

<div>
  {{#each posts}}
    <div class="post">
      <h2>{{title}}</h2>
      <p>{{content}}</p>
      <small>By {{user.username}} on {{createdAt}}</small>
    </div>
  {{/each}}
</div>
